{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@kigo-top/components": ["libs/components/src/index.ts"],
      "@kigo-top/constants": ["libs/constants/src/index.ts"],
      "@kigo-top/hooks": ["libs/hooks/src/index.ts"],
      "@kigo-top/providers": ["libs/providers/src/index.ts"],
      "@kigo-top/services/client": ["libs/services/src/lib/client-index.ts"],
      "@kigo-top/services/core": ["libs/services/src/lib/core-index.ts"],
      "@kigo-top/types": ["libs/types/src/index.ts"],
      "@kigo-top/utils": ["libs/utils/src/index.ts"]
    }
  }
}
