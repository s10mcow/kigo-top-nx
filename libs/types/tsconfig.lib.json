{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/types",
    "tsBuildInfoFile": "../../dist/libs/types/tsconfig.lib.tsbuildinfo",
    "module": "esnext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "types": ["node"],
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
